# Hanacaraka Production Environment Configuration

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Environment
ENV=production

# Database Configuration
DB_HOST=db.production.example.com
DB_PORT=5432
DB_NAME=hanacaraka_prod
DB_USER=hanacaraka_user
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_SSL_MODE=require

# API Configuration
API_VERSION=v1
API_TIMEOUT=15s

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Security (CHANGE ALL THESE IN PRODUCTION)
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET_FOR_PRODUCTION
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# External Services
REDIS_URL=redis://redis.production.example.com:6379
SMTP_HOST=smtp.production.example.com
SMTP_PORT=587
SMTP_USERNAME=CHANGE_ME_SMTP_USERNAME
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD

# Application Specific (production optimized)
MAX_UPLOAD_SIZE=5MB
REQUEST_TIMEOUT=15s
RATE_LIMIT=50

# Production specific settings
HOT_RELOAD=false
DEBUG_MODE=false
ENABLE_PROFILER=false
TLS_ENABLED=true
SECURE_COOKIES=true
