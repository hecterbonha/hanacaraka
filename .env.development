# Hanacaraka Development Environment Configuration

# Server Configuration
PORT=8080
HOST=localhost

# Environment
ENV=development

# Database Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hanacaraka_dev
DB_USER=postgres
DB_PASSWORD=dev_password
DB_SSL_MODE=disable

# API Configuration
API_VERSION=v1
API_TIMEOUT=30s

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# Security (development keys - not for production)
JWT_SECRET=dev-jwt-secret-key-not-for-production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# External Services (development)
REDIS_URL=redis://localhost:6379
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=

# Application Specific (development)
MAX_UPLOAD_SIZE=50MB
REQUEST_TIMEOUT=60s
RATE_LIMIT=1000

# Development specific settings
HOT_RELOAD=true
DEBUG_MODE=true
ENABLE_PROFILER=true
